@page "/"
@page "/{Size:int}/{GridText}"
@page "/{Size:int}"
@using Sudoku
@using GridPuzzles.Cells


<GridPage T="int"
          TCell="IntCell"
          Columns="@_size"
          Rows="@_size"
          GridCreator="SudokuGridCreator.Instance"
          GridText="@GridText"
          Examples="@Examples.ExampleHelper.SudokuExamples.ToList()"/>


@code {

    [Parameter]
    public int Size { get; set; }

    private int _size => Size == default ? 9 : Size;

    [Parameter]
    public string? GridText { get; set; }
}