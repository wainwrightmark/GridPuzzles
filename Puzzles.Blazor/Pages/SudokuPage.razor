@page "/Sudoku"
@page "/Sudoku/{Size:int}/{GridText}"
@page "/Sudoku/{Size:int}"
@using GridPuzzles.Cells


<GridPage T="int"
          TCell="IntCell"
          Columns="@_size"
          Rows="@_size"
          GridCreator="SudokuGridCreator.Instance"
          GridText="@GridText"
          Examples="@Sudoku.Examples.ExampleHelper.SudokuExamples.ToList()"/>


@code {

    [Parameter]
    public int Size { get; set; }

    private int _size => Size == default ? 9 : Size;

    [Parameter]
    public string? GridText { get; set; }
}